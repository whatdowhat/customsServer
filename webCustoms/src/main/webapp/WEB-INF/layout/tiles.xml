<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	
	
	<!--admin tiles 적용 -->
	<definition name="tilesLayout" template="/WEB-INF/views/layout/tilesLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/views/layout/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/layout/nav.jsp"/>
		<put-attribute name="content" value="" />
	</definition>
	
	<definition name="*.tilesLayout" extends="tilesLayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
	<definition name="*/*.tilesLayout" extends="tilesLayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*/*.tilesLayout" extends="tilesLayout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
	
	<definition name="tilesLayoutEmpty" template="/WEB-INF/views/layout/tilesLayoutEmpty.jsp">
		<put-attribute name="content" value="" />
	</definition>
	
	<definition name="*.tilesLayoutEmpty" extends="tilesLayoutEmpty">
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
	<definition name="*/*.tilesLayoutEmpty" extends="tilesLayoutEmpty">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*/*.tilesLayoutEmpty" extends="tilesLayoutEmpty">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
</tiles-definitions>